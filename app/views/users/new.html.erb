<div class="white-background">
  <%= form_for User.new, url: create_user_path do |form| %>

    <div class="form-group">
      <%= form.label :name %><br />
      <%= form.text_field :name, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= form.label :username %><br />
      <%= form.text_field :username, autofocus: true, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= form.label :email %><br />
      <%= form.email_field :email, class: "form-control" %>
    </div>

    <div class="form-group input-medium bfh-phone">
      <%= form.label :phone %><br />
      <%= form.text_field :phone, class: "form-control "%>
    </div>

    <% if current_user.admin? %>
      <div class="form-group">
        <%= form.label :role %><br />
        <%= form.text_field :role, class: "form-control" %>
      </div>
    <% end %>

    <div class="row">
      <div class="col-sm-5 form-group">
        <%= form.label :street %><br />
        <%= form.text_field :street, class: "form-control" %>
      </div>

      <div class="col-sm-3 form-group">
        <%= form.label :city %><br />
        <%= form.text_field :city, class: "form-control" %>
      </div>

      <div class="col-sm-2 form-group">
        <%= form.label :zip %><br />
        <%= form.text_field :zip, class: "form-control" %>
      </div>

      <div class=" col-sm-2 form-group">
        <%= form.label :state %><br />
        <%= form.text_field :state, class: "form-control" %>
      </div>
    </div>

    <div class="form-group">
      <strong>Upload a Profile Pic: </strong>
      <%= form.file_field :avatar, class: "form-control-file" %>
    </div>

    <div class="form-group">
      <%= form.label :password %>
      <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %><br />
      <%= form.password_field :password, autocomplete: "off", class: "form-control" %>
    </div>

    <div class="form-group">
      <%= form.label :password_confirmation %><br />
      <%= form.password_field :password_confirmation, autocomplete: "off", class: "form-control" %>
    </div>

    <div class="actions">
      <%= link_to 'Back', users_path, class: "btn btn-default" %>
    </div>

    <%= form.submit "Sign up", class: "btn btn-primary" %>

  <% end %>
</div>
